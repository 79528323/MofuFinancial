<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="cn.mofufin.morf.ui.util.DataUtils"/>
        <import type="cn.mofufin.morf.ui.fragment.RecordInverstMentingFragment"/>
        <import type="android.view.View"/>
        <variable
            name="hasData"
            type="boolean"/>
        <variable
            name="handlers"
            type="cn.mofufin.morf.ui.fragment.RecordInverstMentingFragment"/>
        <variable
            name="amount"
            type="double"/>
        <variable
            name="count"
            type="int"/>
        <variable
            name="onPress"
            type="boolean"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/app_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/timepicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2018-10-19~2018-12-19"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_normal"
                    android:onClick="@{handlers.showCustomTimePicker}"
                    android:textColor="@color/dark_gray"/>

                <CheckBox
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{onPress}"
                    android:button="@null"
                    android:drawableRight="@drawable/filter_selector"
                    android:drawablePadding="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_weight="1"
                android:layout_marginTop="@dimen/default_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{"在投总金额/元："+DataUtils.numFormat(amount)+"   共"+String.valueOf(count)+"笔"}'
                tools:text="在投总金额/元：1330.88   共160笔"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/light_gray"/>

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_bg">

                <cc.ruis.lib.widget.WrapRecyclerView
                    android:visibility="@{hasData?View.VISIBLE:View.GONE}"
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/app_bg"
                    tools:visibility="visible"
                    android:layout_above="@+id/next"
                    tools:listitem="@layout/layout_inverstment_record_item"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                tools:visibility="gone"
                android:visibility="@{!hasData?View.VISIBLE:View.GONE}"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/no_data"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/text_size_small"
                    android:text="@string/nodata"/>
            </LinearLayout>

        </FrameLayout>


    </LinearLayout>

</layout>
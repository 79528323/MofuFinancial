<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="cn.mofufin.morf.ui.util.DataUtils"/>
        <import type="android.text.TextUtils"/>
        <variable
            name="clicklistener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="bean"
            type="cn.mofufin.morf.ui.entity.LoanProduct.ProductListBean"/>
        <variable
            name="months"
            type="String"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            tools:targetApi="lollipop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:onClick="@{clicklistener}"
            android:tag="@{bean}"
            apps:cardElevation="3dp"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@{bean.productName}"
                        android:gravity="center"
                        android:background="@drawable/shape_loan_red"
                        android:layout_marginLeft="@dimen/default_item_margin"
                        android:textSize="@dimen/text_size_normal"/>

                    <TextView
                        android:layout_weight="1"
                        android:paddingEnd="@dimen/default_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_gray"
                        android:text="小额专享 | 申请便捷 | 随借随还"
                        android:gravity="center|right"
                        android:ellipsize="end"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="@dimen/default_padding"
                        android:textSize="@dimen/text_size_small"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/default_margin"
                    android:paddingBottom="@dimen/default_padding"
                    android:background="@color/white">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text='@{String.valueOf(bean.loansMaxMoney/10000)+"万"}'
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/loan_red"
                            android:textSize="@dimen/topic_contat_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="日利率："
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text='@{DataUtils.scientificMatchPercent(bean.loansRate,5)}'
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="true"
                        android:paddingTop="7dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1.1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="最高贷款额度(元)"
                            android:gravity="center"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="贷款周期："
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text='@{bean.loansPeriod+"个月"}'
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
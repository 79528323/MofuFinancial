<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="cn.mofufin.morf.ui.util.DataUtils"/>
        <variable
            name="handlers"
            type="cn.mofufin.morf.ui.repayment.fragment.RepayMentProjectFragment"/>
        <variable
            name="onPress"
            type="boolean"/>
        <variable
            name="totalConsumeMoney"
            type="double"/>
        <variable
            name="totalRefundMoney"
            type="double"/>
        <variable
            name="hasData"
            type="boolean"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/app_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--tools:text="2018-10-19~2018-12-19"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:textSize="@dimen/text_size_normal"-->
                    <!--android:textColor="@color/dark_gray"/>-->

                <CheckBox
                    android:id="@+id/timepicker"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{onPress}"
                    android:button="@null"
                    tools:text="2018-10-19~2018-12-19"
                    android:onClick="@{handlers.showCustomTimePicker}"
                    android:drawableRight="@drawable/filter_selector"
                    android:drawablePadding="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_weight="1"
                android:layout_marginTop="@dimen/default_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{"总延期/元："+DataUtils.numFormat(totalRefundMoney)+"   总消费/元："+DataUtils.numFormat(totalConsumeMoney)}'
                tools:text="总延期/元：   总消费/元："
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/light_gray"/>

        </LinearLayout>

        <FrameLayout
            android:background="@color/app_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <cc.ruis.lib.widget.WrapRecyclerView
                android:id="@+id/project_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_background"
                android:overScrollMode="never"
                android:visibility="@{hasData?View.VISIBLE:View.GONE}"
                tools:listitem="@layout/layout_commission_item"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                tools:visibility="gone"
                android:background="@color/app_background"
                android:visibility="@{!hasData?View.VISIBLE:View.GONE}"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/no_data"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/text_size_small"
                    android:text="@string/nodata"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</layout>
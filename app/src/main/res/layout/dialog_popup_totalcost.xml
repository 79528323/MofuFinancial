<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/total_fee_bg"
        android:paddingTop="@dimen/default_padding"
        android:paddingBottom="@dimen/default_padding"
        android:paddingStart="@dimen/default_item_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/total_repay"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="@color/dark_gray"
            android:text="总延期手续费/元：900.00"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:id="@+id/total_consume"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="总延期手续费/元：900.002"
            android:textColor="@color/dark_gray"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:id="@+id/total_statistics"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="总延期手续费/元：900.0011"
            android:layout_height="0dp"
            android:textColor="@color/dark_gray"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

</RelativeLayout>
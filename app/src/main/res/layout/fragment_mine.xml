                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/default_item_margin"
                                android:paddingLeft="@dimen/default_padding"
                                android:paddingRight="@dimen/default_padding">

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:gravity="center"
                                    android:onClick="@{handlers.cardmanager}"
                                    android:background="@drawable/mine_bt"
                                    android:layout_marginLeft="@dimen/default_margin"
                                    android:layout_marginRight="@dimen/default_margin"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/default_padding"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:src="@drawable/mine_card_manager"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.4"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/dark_gray"
                                            android:text="@string/mine_text3"/>
                                    </LinearLayout>

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:gravity="center"
                                    android:onClick="@{handlers.userinfo}"
                                    android:background="@drawable/mine_bt"
                                    android:layout_marginLeft="@dimen/default_margin"
                                    android:layout_marginRight="@dimen/default_margin"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/default_padding"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:src="@drawable/account_detail"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.4"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/dark_gray"
                                            android:text="个人信息"/>
                                    </LinearLayout>

                                </LinearLayout>

                                <!--<LinearLayout-->
                                    <!--android:layout_weight="1"-->
                                    <!--android:layout_width="0dp"-->
                                    <!--android:layout_height="60dp"-->
                                    <!--android:gravity="center"-->
                                    <!--android:onClick="@{handlers.commission}"-->
                                    <!--android:background="@drawable/mine_bt"-->
                                    <!--android:layout_marginLeft="@dimen/default_margin"-->
                                    <!--android:layout_marginRight="@dimen/default_margin"-->
                                    <!--android:orientation="horizontal">-->

                                    <!--<LinearLayout-->
                                        <!--android:layout_width="match_parent"-->
                                        <!--android:layout_height="wrap_content"-->
                                        <!--android:gravity="center_vertical"-->
                                        <!--android:paddingLeft="@dimen/default_padding"-->
                                        <!--android:orientation="horizontal">-->

                                        <!--<ImageView-->
                                            <!--android:layout_width="0dp"-->
                                            <!--android:layout_weight="1"-->
                                            <!--android:layout_height="wrap_content"-->
                                            <!--android:layout_gravity="right"-->
                                            <!--android:src="@drawable/mine_commission"/>-->

                                        <!--<TextView-->
                                            <!--android:layout_width="0dp"-->
                                            <!--android:layout_weight="1.4"-->
                                            <!--android:layout_height="wrap_content"-->
                                            <!--android:textColor="@color/dark_gray"-->
                                            <!--android:text="@string/mine_text4"/>-->
                                    <!--</LinearLayout>-->
                                <!--</LinearLayout>-->

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/default_item_margin"
                                android:paddingLeft="@dimen/default_padding"
                                android:paddingRight="@dimen/default_padding">





                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:gravity="center"
                                    android:onClick="@{handlers.commission}"
                                    android:background="@drawable/mine_bt"
                                    android:layout_marginLeft="@dimen/default_margin"
                                    android:layout_marginRight="@dimen/default_margin"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/default_padding"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:src="@drawable/mine_commission"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.4"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/dark_gray"
                                            android:text="@string/mine_text4"/>
                                    </LinearLayout>
                                </LinearLayout>




                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:gravity="center"
                                    android:background="@drawable/mine_bt"
                                    android:layout_marginLeft="@dimen/default_margin"
                                    android:layout_marginRight="@dimen/default_margin"
                                    android:onClick="@{handlers.backpack}"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/default_padding"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:src="@drawable/my_backpack"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.4"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/dark_gray"
                                            android:text="@string/mine_text15"/>
                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/default_item_margin"
                                android:paddingLeft="@dimen/default_padding"
                                android:paddingRight="@dimen/default_padding">


                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:gravity="center"
                                    android:onClick="@{handlers.balance}"
                                    android:background="@drawable/mine_bt"
                                    android:layout_marginLeft="@dimen/default_margin"
                                    android:layout_marginRight="@dimen/default_margin"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/default_padding"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:src="@drawable/mine_balance"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.4"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/dark_gray"
                                            android:text="@string/mine_text5"/>
                                    </LinearLayout>

                                </LinearLayout>



                                <LinearLayout
                                    android:visibility="visible"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:gravity="center"
                                    android:background="@drawable/mine_bt"
                                    android:layout_marginLeft="@dimen/default_margin"
                                    android:layout_marginRight="@dimen/default_margin"
                                    android:onClick="@{handlers.finanal}"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/default_padding"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:src="@drawable/home_mofu"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.4"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/dark_gray"
                                            android:text="摩富"/>
                                    </LinearLayout>

                                </LinearLayout>



                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/default_item_margin"
                                android:paddingLeft="@dimen/default_padding"
                                android:paddingRight="@dimen/default_padding">

                                <LinearLayout
                                    android:onClick="@{handlers.mofuCoin}"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:gravity="center"
                                    android:background="@drawable/mine_bt"
                                    android:layout_marginLeft="@dimen/default_margin"
                                    android:layout_marginRight="@dimen/default_margin"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/default_padding"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:src="@drawable/icon_coin"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.4"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/dark_gray"
                                            android:text="摩富币"/>
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:gravity="center"
                                    android:onClick="@{handlers.call}"
                                    android:background="@drawable/mine_bt"
                                    android:layout_marginLeft="@dimen/default_margin"
                                    android:layout_marginRight="@dimen/default_margin"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/default_padding"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:src="@drawable/mine_help"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.4"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/dark_gray"
                                            android:text="@string/mine_text9"/>
                                    </LinearLayout>

                                </LinearLayout>



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/default_item_margin"
                                android:paddingLeft="@dimen/default_padding"
                                android:paddingRight="@dimen/default_padding">


                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:gravity="center"
                                    android:onClick="@{handlers.Public}"
                                    android:background="@drawable/mine_bt"
                                    android:layout_marginLeft="@dimen/default_margin"
                                    android:layout_marginRight="@dimen/default_margin"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/default_padding"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:src="@drawable/mine_public"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.4"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/dark_gray"
                                            android:text="@string/mine_text6"/>
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:gravity="center"
                                    android:background="@drawable/mine_bt"
                                    android:layout_marginLeft="@dimen/default_margin"
                                    android:layout_marginRight="@dimen/default_margin"
                                    android:onClick="@{handlers.more}"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/default_padding"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:src="@drawable/mine_more"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.4"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/dark_gray"
                                            android:text="@string/mine_text10"/>
                                    </LinearLayout>

                                </LinearLayout>



                            </LinearLayout>





                            <LinearLayout
                                android:visibility="gone"
                                android:onClick="@{handlers.call}"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/default_item_margin"
                                android:paddingLeft="@dimen/default_padding"
                                android:paddingRight="@dimen/default_padding">



                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:gravity="center"
                                    android:visibility="invisible"
                                    android:background="@drawable/mine_bt"
                                    android:layout_marginLeft="@dimen/default_margin"
                                    android:layout_marginRight="@dimen/default_margin"
                                    android:onClick="@{handlers.more}"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/default_padding"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"

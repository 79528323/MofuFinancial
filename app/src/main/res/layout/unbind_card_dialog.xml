<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f4"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/default_padding"
                android:text="请输入交易密码"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/text_size_title" />

            <EditText
                android:id="@+id/password"
                android:layout_marginLeft="@dimen/dynamic_remind_icon"
                android:layout_marginTop="@dimen/default_padding"
                android:layout_marginRight="@dimen/dynamic_remind_icon"
                android:layout_marginBottom="@dimen/default_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/text_size_normal"
                android:padding="5dp"
                android:gravity="center"
                android:maxLength="6"
                android:inputType="textPassword"
                android:hint=""
                android:singleLine="true"
                android:background="@drawable/scanning_editter_bg"
                android:textColorHint="@color/light_gray"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/cancel"
                android:textColor="@color/button_bg_blue"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f4f4f4"/>

            <TextView
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/confirm"
                android:textColor="@color/button_bg_blue"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>